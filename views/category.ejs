<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title><%= categoryName[0].toUpperCase() + categoryName.slice(1) %></title>
</head>
<body>
    <%- include('./partials/nav') %>
    <h1><%= categoryName[0].toUpperCase() + categoryName.slice(1) %></h1>
    <ul>
    <% menuItems.forEach((item) => { %>
      <% if(item.category === categoryName) { %>
        <li><b><%= item.name %></b> (Price: <%= item.price %>) - Rating: <%= item.rating %></li>
        <p><i><%= item.details %></i></p>
      <% }; %>
    <% }); %>
    </ul>
</body>
</html>